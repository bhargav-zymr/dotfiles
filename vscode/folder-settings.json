// saved at .vscode/seetings.json
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        ".eslintrc": true,
        ".lesshintrc": true,
        ".gitignore": true,
        ".eslintignore": true,
        ".editorconfig": true,
        ".gitattributes": true,
        "tslint.json": true,
        "semantic.json": true,
        "protractor.conf.js": true,
        "karma.conf.js": true,
        "package.json": false,
        "package-lock.json": true,
        "tsconfig.json": true,
        "node_modules/": true,
        "e2e/": true,
        "**/.vscode/": true,
        "*.code-workspace": true,
        ".angular-cli.json": false,
        "src/polyfills.ts": true,
        "src/test.ts": true,
        "src/typings.d.ts": true,
        "src/tsconfig.app.json": true,
        "src/tsconfig.spec.json": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.spec.ts": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.css.map": {
            "when": "$(basename)"
        }
    }
}